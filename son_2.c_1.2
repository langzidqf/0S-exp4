#include "son_2.h"

son_2::son_2(QWidget *parent) : QWidget(parent)
{
    btn.setText("son2");
    btn.setParent(this);
    label.setParent(this);
    label.move(0,50);
    int a = 0;
    label.setText(QString::number(a));

    qtm.setParent(this);
    qtm.start(1000);
    connect(&qtm,&QTimer::timeout,
            [=]() mutable
            {
                if(a == 9) a= 0;
                else a++;
                label.setText(QString::number(a));
            }
            );

    this->resize(300,400);
}
